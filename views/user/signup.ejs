<% layout("/layouts/boilerplate.ejs") -%>


<div class="row">
    <div class="col-6 offset-3">
        <h2>SignUp On WanderLust</h2>
        <form
            method="post" 
            action="/signup"
            class="needs-validation" 
            novalidate    
        >
            <div class="mb-3">
                <label for="email" class="form-lable">
                    Email
                </label>
                <input 
                    name="email" 
                    class="form-control"  
                    type="email"
                    id="email" 
                    required
                >
            </div>
            <div class="mb-3">
                <label for="username" class="form-lable">
                    Username
                </label>
                <input 
                    name="username" 
                    class="form-control"  
                    type="text"
                    id="username" 
                    required
                >
            </div>
            <div class="mb-3">
                <label for="password" class="form-lable">
                    Password
                </label>
                <input 
                    name="password" 
                    class="form-control"  
                    type="password"
                    id="password" 
                    required
                >
            </div>
            <button class="btn btn-success">
                SignUp
            </button>
        </form>
    </div>
</div>