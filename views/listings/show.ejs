<% layout("/layouts/boilerplate.ejs") -%>
<script>
  const mapToken = '<%= process.env.MAP_TOKEN%>'
  const coordinates =  <%- JSON.stringify(listing.geometry.coordinates)%>
</script>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3><%=listing.title%></h3>
    </div>
    <div class="col-6 offset-3 mt-2 show-card">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top show-img"
        alt="ListingImage"
      />
      <div class="card-body mt-2">
        <p class="card-text">
          <i>Owned By <b><%=listing.owner.username%></b></i>
        </p>
        <p class="card-text"><%=listing.description%></p>
        <p class="card-text">
          &#8377;<%=listing.price.toLocaleString("en-IN")%>/ Night
        </p>
        <p class="card-text"><%=listing.location%></p>
        <p class="card-text"><%=listing.country%></p>
      </div>
   
    <div class="row">
        <div class="col-8 offset-3">
            <hr>
        <% if(currUser) { %>
            <h4>Leave a Review:</h4>
            <form 
                action="/listings/<%=listing.id%>/reviews"
                method="post"
                novalidate 
                class="needs-validation"
            >
                <div class="mt-2">
                    <label for="rating" class="form-lable mt-2">
                        Rating :
                    </label>
                    <fieldset class="starability-slot mt-3">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-2">
                    <label for="comment" class="form-lable">
                        Comment :
                    </label>
                    <textarea 
                        name="review[comment]" 
                        type="text" class="form-control" 
                        required
                        id="comment"></textarea>
                    <div class="invalid-feedback">
                        Please Add Short Comment
                    </div>
                </div>
                <button class="btn btn-outline-dark mb-2">
                    Submit
                </button>
            </form>
        <% } %>
            <h4>All Reviews</h4>
            <div class="row row-cols-lg-3">
                <%for(review of listing.reviews) {%>
                    <div class="card ms-3 mb-2` col-5 review-card">
                        <div class="card-body mt-2">
                            <h4>@<%=review.author.username%></h4>
                            <p class="card-text starability-result" data-rating="<%=review.rating%>"></p>
                            <p class="card-text"><p><%=review.comment%></p></p>
                        </div>
                        <form
                            method="post"
                            action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"   
                        > 
                        <% if(currUser && currUser._id.equals(review.author._id)) { %>
                            <button class="btn btn-sm btn-outline-dark mb-2">DELETE</button>
                        <%}%>
                        </form>
                    </div>      
                <%}%>
            </div>
        </div>
    </div>
    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="btns offset-1 mb-2 mt-2">
      <a
        href="/listings/<%=listing._id%>/edit"
        class="btn edit-btn col-md-1 offset-2"
      >
        Edit
      </a>
      <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark offset-2">DELETE</button>
      </form>
    </div>
    <% } %>
  </div>

  <div class="row">
    <div class="col-8 offset-3">
      <hr />
      <% if(currUser) { %>
      <h4>Leave a Review:</h4>
      <form
        action="/listings/<%=listing.id%>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="mt-2 mb-2">
          <label for="rating" class="form-lable"> Rating : </label>
          <fieldset id="rating" class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mt-2 mb-2">
          <label for="comment" class="form-lable"> Comment : </label>
          <textarea
            name="review[comment]"
            type="text"
            class="form-control"
            required
            id="comment"
          ></textarea>
          <div class="invalid-feedback">Please Add Short Comment</div>
        </div>
        <button class="btn btn-outline-dark mb-2">Submit</button>
      </form>
      <% } %>

      <div class="row row-cols-lg-3">
        <%if(listing.reviews.length>0){%>
        <h4>All Reviews</h4>
        <%for(review of listing.reviews) {%>
        <div class="card ms-3 mb-2 col-5 review-card">
          <div class="card-body mt-2">
            <h4><%=review.author.username%></h4>
            <p
              class="starability-result card-text"
              data-rating="<%=review.rating%>"
            ></p>
            <h5 class="card-title"><%=review.comment%>stars</h5>
          </div>
          <form
            method="post"
            action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
          >
            <% if(currUser && currUser._id.equals(review.author._id)) { %>
            <button class="btn btn-sm btn-outline-dark mb-1">DELETE</button>
            <%}%>
          </form>
        </div>
        <%}%> <%}%>
      </div>
    </div>
  </div>
  <div class="col-8 offset-3 mb-3">
    <h3>You'll Be Here...</h3>
    <div id="map"></div>
  </div>
  <script src="/js/map.js"></script>
</body>
